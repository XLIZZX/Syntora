<body>
    <!-- Logo for Syntora -->
    <div id="logo"></div>
    
    <!-- Title of the App with animation -->
    <h1>Syntora</h1>

    <!-- Instructions -->
    <div id="message">Syntora: Type a command below:</div>

    <!-- Text Area for Input -->
    <textarea id="editor" placeholder="Enter your command here..."></textarea>

    <!-- Button to Execute Command -->
    <button class="button" onclick="runCommand()">Run Command</button>

    <!-- Button to Show Commands -->
    <button class="button" onclick="showCommands()">Show Commands</button>

    <!-- List of available commands -->
    <div id="commandsList">
        <p><strong>Available commands:</strong></p>
        <ul>
            <li>hello - Greets the user.</li>
            <li>goodbye - Says goodbye.</li>
            <li>info - Displays information about Syntora.</li>
            <li>help - Lists all available commands.</li>
            <li>weather - Shows a weather message (static for now).</li>
            <li>date - Displays today's date.</li>
            <li>time - Displays the current time.</li>
            <li>add [num1] [num2] - Adds two numbers.</li>
            <li>subtract [num1] [num2] - Subtracts two numbers.</li>
            <li>multiply [num1] [num2] - Multiplies two numbers.</li>
            <li>divide [num1] [num2] - Divides two numbers.</li>
        </ul>
    </div>

    <script>
        function runCommand() {
            var input = document.getElementById("editor").value;
            var outputMessage = "Syntora: You entered: " + input;

            // Commands implementation
            if (input.toLowerCase() === "hello") {
                outputMessage = "Syntora: Hello, user!";
            } else if (input.toLowerCase() === "goodbye") {
                outputMessage = "Syntora: Goodbye, user!";
            } else if (input.toLowerCase() === "info") {
                outputMessage = "Syntora: Syntora is a simple programming language interface.";
            } else if (input.toLowerCase() === "help") {
                outputMessage = "Syntora: Available commands: hello, goodbye, info, help, weather, date, time, add, subtract, multiply, divide.";
            } else if (input.toLowerCase() === "weather") {
                outputMessage = "Syntora: The weather today is sunny.";
            } else if (input.toLowerCase() === "date") {
                var currentDate = new Date().toLocaleDateString();
                outputMessage = "Syntora: Today's date is " + currentDate + ".";
            } else if (input.toLowerCase() === "time") {
                var currentTime = new Date().toLocaleTimeString();
                outputMessage = "Syntora: The current time is " + currentTime + ".";
            } else if (input.toLowerCase().startsWith("add")) {
                var numbers = input.split(" ").slice(1).map(Number);
                var sum = numbers[0] + numbers[1];
                outputMessage = `Syntora: ${numbers[0]} + ${numbers[1]} = ${sum}`;
            } else if (input.toLowerCase().startsWith("subtract")) {
                var numbers = input.split(" ").slice(1).map(Number);
                var difference = numbers[0] - numbers[1];
                outputMessage = `Syntora: ${numbers[0]} - ${numbers[1]} = ${difference}`;
            } else if (input.toLowerCase().startsWith("multiply")) {
                var numbers = input.split(" ").slice(1).map(Number);
                var product = numbers[0] * numbers[1];
                outputMessage = `Syntora: ${numbers[0]} * ${numbers[1]} = ${product}`;
            } else if (input.toLowerCase().startsWith("divide")) {
                var numbers = input.split(" ").slice(1).map(Number);
                var quotient = numbers[0] / numbers[1];
                outputMessage = `Syntora: ${numbers[0]} / ${numbers[1]} = ${quotient}`;
            } else {
                outputMessage = "Syntora: Unknown command.";
            }

            document.getElementById("message").innerText = outputMessage;
            document.getElementById("editor").value = ""; // Clear the text area
        }

        function showCommands() {
            var commandsList = document.getElementById("commandsList");
            commandsList.style.display = commandsList.style.display === "block" ? "none" : "block";
        }
    </script>
</body>
</html>
