    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #e5b5ff;
            text-align: center;
            padding-top: 50px;
        }
        h1 {
            margin-top: 20px;
            font-size: 48px;
            animation: colorChange 1s infinite;
        }
        @keyframes colorChange {
            0% { color: #7a386e; }
            50% { color: #a0458f; }
            100% { color: #7a386e; }
        }
        #logo {
            width: 50px;
            height: 50px;
            background-color: #7a386e;
            border-radius: 50%;
            margin-bottom: 20px;
            display: inline-block;
        }
        #message {
            margin-top: 20px;
            font-size: 18px;
        }
        textarea {
            width: 80%;
            height: 150px;
            background-color: #333;
            color: white;
            border: none;
            padding: 10px;
            font-size: 16px;
            font-family: monospace;
            margin-top: 20px;
        }
        .button {
            padding: 10px 20px;
            background-color: #7a386e;
            color: white;
            border: none;
            cursor: pointer;
            font-size: 18px;
            margin-top: 10px;
            border-radius: 12px;
        }
        .button:hover {
            background-color: #a0458f;
        }
        #commandsList {
            margin-top: 20px;
            font-size: 16px;
            background-color: #333;
            color: white;
            padding: 10px;
            border-radius: 8px;
            display: none;
        }
